<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F1F1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:elevation="2dp">

            <ImageView
                android:background="@drawable/growth"
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_growth" />


            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/img_growth"
                android:text="2019/08/18"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_growth"
                android:layout_below="@id/text_date"
                android:text="身高"
                android:layout_marginLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />

            <TextView
                android:id="@+id/textView_height"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_date"
                android:layout_toRightOf="@id/textView2"
                android:text="100"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_date"
                android:layout_toRightOf="@id/textView_height"
                android:text="公分"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_growth"
                android:layout_below="@id/textView2"
                android:text="體重"
                android:layout_marginLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />

            <TextView
                android:id="@+id/textView_weight"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_height"
                android:layout_toRightOf="@id/textView2"
                android:text="100"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_height"
                android:layout_toRightOf="@id/textView_weight"
                android:text="公斤"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_growth"
                android:layout_below="@id/textView_weight"
                android:text="頭圍"
                android:layout_marginLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />

            <TextView
                android:id="@+id/textView_head"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_weight"
                android:layout_toRightOf="@id/textView2"
                android:text="100"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_weight"
                android:layout_toRightOf="@id/textView_height"
                android:text="公分"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#645C5C" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>